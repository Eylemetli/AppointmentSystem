@model IEnumerable<RandevuSistemi.Models.Customer>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h1>Müşteri Listesi</h1>

<p>
    <a class="btn btn-primary" asp-controller="Customer" asp-action="CreateCustomer">Yeni Müşteri Ekle</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Henüz müşteri eklenmedi.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Oluşturma Tarihi</th>
                <th>Not</th>
                <th style="width:120px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.Notes</td>
                    <td>
                        <a class="btn btn-sm btn-danger"
                           asp-controller="Customer"
                           asp-action="DeleteCustomer"
                           asp-route-id="@item.Id">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning"
                           asp-controller="Customer"
                           asp-action="EditCustomer"
                           asp-route-id="@item.Id">Düzenle</a>

                        <a class="btn btn-sm btn-danger"
                           asp-controller="Customer"
                           asp-action="DeleteCustomer"
                           asp-route-id="@item.Id">Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
