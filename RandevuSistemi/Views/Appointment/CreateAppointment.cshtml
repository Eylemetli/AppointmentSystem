@using Microsoft.AspNetCore.Mvc.Rendering
@model RandevuSistemi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<div class="page-top">
    <div class="page-hero">
        <div class="hero-icon">📅</div>
        <div>
            <div class="hero-title">Randevu Oluştur</div>
            <div class="hero-sub">Müşteri seç, tarih/saat ve süreyi gir, kaydet.</div>
        </div>
        <div class="hero-actions">
            <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="Index">Anasayfa</a>
            <a class="btn btn-outline-light btn-sm" asp-controller="Appointment" asp-action="Index">Randevular</a>
        </div>
    </div>
</div>

<div class="form-shell">
    <div class="card card-shadow border-0">
        <div class="card-body p-4">

            <form asp-controller="Appointment" asp-action="CreateAppointment" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label fw-semibold">Müşteri</label>
                        <select asp-for="CustomerId" class="form-select form-select-lg"
                                asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))">
                            <option value="">-- Müşteri Seç --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="col-md-7">
                        <label class="form-label fw-semibold">Başlangıç (Tarih/Saat)</label>
                        <input asp-for="StartTime" class="form-control form-control-lg" type="datetime-local" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Süre (dakika)</label>
                        <input asp-for="DurationMinutes" class="form-control form-control-lg" placeholder="Örn: 30" />
                        <div class="form-text">5–240 dakika arası</div>
                        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Durum</label>
                        <select asp-for="Status" class="form-select form-select-lg"
                                asp-items="Html.GetEnumSelectList<RandevuSistemi.Models.AppointmentStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Kaydet</button>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-outline-secondary btn-lg">İptal</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .page-top { margin-bottom: 16px; }
    .page-hero{
        display:flex; align-items:center; gap:14px; justify-content:space-between;
        padding:18px 18px;
        border-radius:18px;
        color:#fff;
        background: linear-gradient(135deg, #11c5b8, #1f79ff);
        box-shadow:0 10px 26px rgba(0,0,0,.12);
        overflow:hidden;
        position:relative;
    }
    .page-hero::after{
        content:"";
        position:absolute; right:-40px; top:-40px;
        width:160px; height:160px;
        background: rgba(255,255,255,.18);
        border-radius:50%;
    }
    .hero-icon{ font-size:34px; }
    .hero-title{ font-size:1.35rem; font-weight:900; letter-spacing:.2px; line-height:1.1; }
    .hero-sub{ opacity:.9; font-size:.95rem; }
    .hero-actions{ display:flex; gap:8px; z-index:1; }
    .form-shell{ max-width: 820px; margin: 0 auto; }
</style>
